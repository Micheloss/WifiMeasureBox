<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.miguel.wifimeasurebox.startActivity"
    tools:showIn="@layout/activity_start">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imageView"
        android:src="@drawable/wifisplash"
        android:transitionName="profile" />

    <Button
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:text="Measure new building"
        android:id="@+id/button"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="100dp"
        android:translationZ="@dimen/shadow"
        android:fadingEdge="horizontal"
        android:layout_marginLeft="22dp"
        android:background="#FFFFFF"
        android:textColor="#00BCD4"
        />

    <Button
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:text="See old data"
        android:id="@+id/button2"
        android:layout_below="@id/button"
        android:layout_marginTop="80dp"
        android:translationZ="@dimen/shadow"
        android:layout_marginLeft="22dp"
        android:background="#FFFFFF"
        android:textColor="#00BCD4"
       />


</RelativeLayout>
